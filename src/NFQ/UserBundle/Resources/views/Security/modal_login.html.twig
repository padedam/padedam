<div class="bs-component">
    <div class="modal" id="login">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">Ã—</button>
                    <h4 class="modal-title">{{ 'generic.please_login'|trans }}</h4>
                </div>
                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin form-horizontal">
                    <div class="modal-body">
                        <fieldset>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                            <div class="form-group">
                                <label class="col-lg-12" for="inputEmail">{{ 'generic.email'|trans }}</label>

                                <div class="col-lg-12">
                                    <input type="email" value="" name="_username" required="required"
                                           placeholder="{{ 'generic.label.email'|trans }}" id="inputEmail"
                                           class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-12" for="inputPassword">{{ 'generic.password'|trans }}</label>

                                <div class="col-lg-12">
                                    <input type="password" name="_password"
                                           placeholder="{{ 'generic.label.password'|trans }}" id="inputPassword"
                                           class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">


                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                                    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    <label id="forgotpass"><a
                                href="{{ path("fos_user_resetting_request") }}">{{ 'generic.forgot_password'|trans }}</a></label>

                    <div class="modal-footer">

                        <button data-dismiss="modal" class="btn btn-default"
                                type="button">{{ 'generic.close'|trans }}</button>
                        <input class="btn btn-primary" type="submit" id="_submit" name="_submit"
                               value="{{ 'generic.login'|trans }}"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="btn btn-primary btn-xs" id="source-button" style="display: none;">&lt; &gt;</div>
</div>