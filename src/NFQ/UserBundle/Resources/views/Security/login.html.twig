{% extends "base.html.twig" %}

{% block body %}
<h1 class="text-center">{{ 'generic.please_login'|trans }}</h1>
<div class="col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
    <div class="well bs-component">
            {% if error %}
                <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
            {% endif %}
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin form-horizontal">
                <fieldset>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <div class="form-group">
                        <label class="col-lg-12" for="inputEmail">{{ 'generic.email'|trans }}</label>
                        <div class="col-lg-12">
                            <input type="email" value="" name="_username" required="required"  placeholder="{{ 'generic.label.email'|trans }}" id="inputEmail" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-12" for="inputPassword">{{ 'generic.password'|trans }}</label>
                        <div class="col-lg-12">
                            <input type="password" name="_password" placeholder="{{ 'generic.label.password'|trans }}" id="inputPassword" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                            <input class = "btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'generic.login'|trans }}" />

                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                        </div>
                    </div>

                </fieldset>
            </form>
            <a href="{{ path("fos_user_resetting_request") }}">{{ 'generic.forgot_password'|trans }}</a>
    </div>
</div>
{% endblock body %}
