{%- macro stringMaxLength(str, maxLength, id) -%}
    {%- if str | length < maxLength -%}
        <p>{{ str }}</p>
    {%- else -%}
        <p class="btn-link" data-target="#m{{ id }}" data-toggle="modal">{{ str|slice(0, maxLength) }}...</p>
        <div class="bs-component">
            <div id="m{{ id }}" class="modal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                            <h4 class="modal-title">{{ 'assistance.label_long_description'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <fieldset>
                                {{ str }}
                            </fieldset>
                        </div>
                        <div class="modal-footer">
                            <h4 class="text-left">{{ 'user.name'|trans }}</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div style="display: none;" id="source-button" class="btn btn-primary btn-xs">&lt; &gt;</div></div>
    {%- endif -%}
{%- endmacro -%}

{% extends "::base.html.twig" %}

{% block body %}
<div class="page-header col-md-6 col-md-offset-3">
<h1 class="tables">{{ 'generic.assistance_req_list'|trans }}</h1>
</div>
    <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <div class="bs-component">
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>#</th>
                <th>{{ 'assistance.owner_first_name'|trans }}</th>
                <th>{{ 'assistance.short_desc'|trans }}</th>
                <th>{{ 'assistance.label_long_description'|trans }}</th>
                <th>{{ 'generic.date'|trans }}</th>
            </tr>
            </thead>
            <tbody>

    {% for row in assistance %}
        <tr>
            <td>{{ row.id }}</td>
            <td>{{ row.owner.firstName }}</td>
            <td>{{ row.shortDescription }}</td>
            <td>
                {{ _self.stringMaxLength(row.longDescription, 50, row.id) }}
            </td>
            <td>{{ row.date|date('Y-m-d') }}</td>
        </tr>
    {% endfor %}

            </tbody>
        </table>
    </div>
    </div>
        <div class="btn btn-primary btn-xs" id="source-button" style="display: none;">&lt; &gt;</div></div>

{% endblock %}

