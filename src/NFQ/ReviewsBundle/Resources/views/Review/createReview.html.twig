{% extends "::base.html.twig" %}

{% block form_row %}
    {% spaceless %}
        <div class="control-group">
            {{ form_label(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}
        </div>
    {% endspaceless %}
{% endblock form_row %}

{% block body %}
    <h1 class="text-center">{{ 'generic.write_review'|trans }}</h1>
    <div class="col-lg-6 col-lg-offset-3">
        <div class="well bs-component">
            <legend>{{ 'generic.write_review_form'|trans }}</legend>
            <fieldset>
                {{ form_start(form) }}

                {{ form_row(form.thank) }}
                <br>
                {{ form_row(form.reviewMessage, {'attr': {'label':'bla', 'class': 'form-control', 'placeholder': 'review.review_textarea_placeholder'|trans,
                    'maxlength':'2000', 'rows':'16', 'style':'resize:none'}}) }}
                <br>
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                {{ form_end(form) }}
            </fieldset>
        </div>
    </div>
{% endblock %}
